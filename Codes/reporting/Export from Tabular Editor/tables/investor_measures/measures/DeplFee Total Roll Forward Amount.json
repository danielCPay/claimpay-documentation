{
  "name": "DeplFee Total Roll Forward Amount",
  "expression": [
    "",
    "\t\tVAR investor = min(vw_portfolio_purchases[investor])",
    "\t\tVAR purchase_month = DATE(  YEAR(MIN(vw_portfolio_purchases[purchase_date])), MONTH(MIN(vw_portfolio_purchases[purchase_date])), 1 )",
    "\t\tRETURN CALCULATE( SUMX( vw_portfolio_purchases, [DeplFee Roll Forward Amount]) ",
    " \t\t\t, FILTER( ",
    " \t\t\t\tALL(vw_portfolio_purchases), ",
    " \t\t\t\t\tvw_portfolio_purchases[investor] = investor ",
    " \t\t\t\t\t&& vw_portfolio_purchases[purchase_date] < purchase_month ",
    " \t\t\t\t\t&& vw_portfolio_purchases[createdtime] >= date(2020,1,1) ",
    " \t\t\t\t\t&& vw_portfolio_purchases[purchase_date] >= date(2020,1,1)",
    " \t\t\t\t\t)",
    " \t\t\t)"
  ],
